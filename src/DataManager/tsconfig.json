{
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "es5",
    "module": "esnext",
    "lib": [ "dom", "esnext" ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "minerva/components": ["ClientApp/ts/components"],
      "minerva/core": ["ClientApp/ts/core"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "inlineSourceMap": true,
  },
  "exclude": [
    "node_modules"
  ]
}